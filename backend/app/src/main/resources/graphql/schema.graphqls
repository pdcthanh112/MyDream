type Query {
    product: [Product]
    category: [Category]
    subcategory: [Subcategory]
    cart: [Cart]
    appData: AppData
}

union AppData = Category | Subcategory

type Product {
    id: ID!
    name: String!
    category: Category
    subcategory: Subcategory
    SKU: String
    quantity: Int
    price: Float
    production: String
    image: String
    description: String
    status: String
    slug: String
    store: Store
}

type Category {
    id: ID!
    name: String!
}

type Subcategory {
    id: ID!
    name: String!
    category: Category
}

type Store {
    id: ID!
    name: String!
    avatar: String
    background: String
    domain: String
}

type Cart {
    id: ID!
    name: String
    createdDate: String
    customerId: String
    status: String
    cartItems: [CartItem]
}

type CartItem {
    id: ID!
    quantity: Int
    product: Product
    cartId: String
    createdDate: String
}